<UserControl x:Class="Battleship.CreateAccountWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battleship"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox x:Name="tbUsername" HorizontalAlignment="Left" Height="23" Margin="89,36,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbEmail" HorizontalAlignment="Left" Height="23" Margin="89,123,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="createUser_Button" Content="Create User" HorizontalAlignment="Left" Margin="215,268,0,0" VerticalAlignment="Top" Width="75" Click="createUser_Button_Click"/>
        <Button x:Name="back_Button" Content="Back" HorizontalAlignment="Left" Margin="10,268,0,0" VerticalAlignment="Top" Width="75" Click="back_Button_Click"/>
        <TextBox x:Name="tbPassword" HorizontalAlignment="Left" Height="23" Margin="89,81,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
