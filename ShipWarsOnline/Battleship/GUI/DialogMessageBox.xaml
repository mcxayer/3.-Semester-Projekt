<Window x:Class="Battleship.GUI.DialogMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship.GUI"
        mc:Ignorable="d"
        Title="DialogBox" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid MinWidth="300" MinHeight="150" Height="76">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="lblInfo" Content="Information" Margin="10,10,10,0" VerticalAlignment="Top" Height="95"/>
        <Button x:Name="btnOk" Content="Ok" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="30" Width="50" HorizontalAlignment="Right" Click="OnOkButtonClicked"/>
    </Grid>
</Window>
