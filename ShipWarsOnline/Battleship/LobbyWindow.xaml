<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battleship"
             xmlns:Game="clr-namespace:Battleship.Game" x:Class="Battleship.LobbyWindow"
             mc:Ignorable="d" 
             d:DesignHeight="300" Width="544.737">
    <Grid>
        <Button x:Name="btnMatchmaking" Content="Matchmake" HorizontalAlignment="Left" Margin="301,270,0,0" VerticalAlignment="Top" Width="91" Click="OnMatchButtonClicked" Height="20"/>
        <Button x:Name="btnDisconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="52,270,0,0" VerticalAlignment="Top" Width="75" Click="OnDisconnectButtonClicked" Height="20"/>
        <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="161,270,0,0" VerticalAlignment="Top" Width="75" Click="OnUpdateButtonClicked" Height="20"/>
        <Label x:Name="lblInfo" Content="" HorizontalAlignment="Left" Margin="86,242,0,0" VerticalAlignment="Top" Width="129" Height="23"/>
        <ListView x:Name="lstLobby" HorizontalAlignment="Stretch" Height="Auto" Margin="52,10,309,63" VerticalAlignment="Stretch" Width="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Username" Width="180" DisplayMemberBinding="{Binding [0]}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="lstLobbyMatchmaking" HorizontalAlignment="Stretch" Height="Auto" Margin="301,10,60,63" VerticalAlignment="Stretch" Width="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Username" Width="180" DisplayMemberBinding="{Binding [0]}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
