<UserControl x:Class="Battleship.MainMenuWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battleship"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#FF464646">
        <Button x:Name="btnStartMultiplayer" Content="Multiplayer" HorizontalAlignment="Left" Margin="5,35,0,0" VerticalAlignment="Top" Click="OnStartMultiplayerButtonClicked" Width="117" Height="40"/>
        <Label x:Name="lblTitle" Content="Main Menu" Margin="0" Background="Gainsboro" VerticalAlignment="Top" Padding="5">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="3"/>
            </Label.Effect>
        </Label>

    </Grid>
</UserControl>
