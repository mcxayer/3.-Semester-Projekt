<UserControl x:Class="Battleship.Game.SeaGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:game="clr-namespace:Battleship.Game"
             mc:Ignorable="d">
    <UserControl.Resources>
        <game:ColorController x:Key="ColorController" />
        <Style x:Key="HorizontalListBox">
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="White" />
            </Style.Resources>
            <Setter Property="ListBox.ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="CellTemplate">
            <Border BorderThickness="2" BorderBrush="DarkGray" CornerRadius="2" Width="20" Height="20" >
                <Rectangle Fill ="{Binding Type,
                    Converter={StaticResource ColorController}}" />
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="RowTemplate">
            <ListBox BorderThickness="0"
                    ItemsSource="{Binding}"
                    Style="{StaticResource HorizontalListBox}"
                    ItemTemplate="{StaticResource CellTemplate}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="OnCellClicked" />
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </DataTemplate>
    </UserControl.Resources>

    <StackPanel Width="300" Height="300">
        <ListBox ItemsSource="{Binding MyGrid}" ItemTemplate="{StaticResource RowTemplate}"
             HorizontalContentAlignment="Center" Padding="20">
            <ListBox.Style>
                <Style>
                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="White" />
                    </Style.Resources>
                </Style>
            </ListBox.Style>
        </ListBox>
    </StackPanel>
</UserControl>
