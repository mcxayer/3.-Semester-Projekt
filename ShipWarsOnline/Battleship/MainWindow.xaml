<Window x:Class="Battleship.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Battleship"
        xmlns:view="clr-namespace:Battleship.Game"
        Title="{StaticResource AppTitle}" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:MainMenuWindow}">
            <local:MainMenuWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:LoginWindow}">
            <local:LoginWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:GameWindow}">
            <local:GameWindow/>
        </DataTemplate>
    </Window.Resources>
    <DockPanel Width="500" Height="500">
        <ContentControl Content="{Binding}"/>
    </DockPanel>
</Window>
